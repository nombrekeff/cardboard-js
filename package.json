{
  "name": "cardboard-js",
  "version": "1.0.0",
  "description": "A very simple, yet powerful framework/library to create web applications without the need to write any HTML.",
  "type": "module",
  "main": "./dist/hobo-rt.js",
  "types": "./dist/hobo-rt.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "tsc && npm run build:example && npm run build:docs",
    "build:watch": "tsc --watch",
    "build:example": "tsc --p example/tsconfig.json",
    "build:example:watch": "tsc --watch --p example/tsconfig.json",
    "build:docs": "typedoc --out docs src/*.ts"

  },
  "author": "nombrekeff",
  "repository": {
    "git": "https://github.com/nombrekeff/cardboard-js"
  },
  "license": "ISC",
  "dependencies": {
    "ts-loader": "^9.4.4",
    "typedoc": "^0.25.1",
    "typescript": "^5.2.2",
    "webpack": "^5.88.2"
  }
}
