{
    "name": "cardboard-js",
    "version": "0.0.0",
    "description": "A very simple, yet powerful framework/library to create web applications without the need to write any HTML.",
    "type": "module",
    "main": "./dist/cardboard.js",
    "types": "./dist/cardboard.d.ts",
    "scripts": {
        "test": "jest --coverage",
        "test:watch": "jest --coverage",
        "build": "rimraf dist && tsc --p tsconfig.json && npm run build:example && npm run build:docs",
        "build:watch": "tsc --watch",
        "build:example": "tsc --p example/tsconfig.json",
        "build:example:watch": "tsc --watch --p example/tsconfig.json",
        "build:docs": "typedoc --out docs src/*.ts"
    },
    "author": "nombrekeff",
    "repository": {
        "git": "https://github.com/nombrekeff/cardboard-js"
    },
    "license": "ISC",
    "dependencies": {
        "@tweenjs/tween.js": "^21.0.0",
        "@types/tween.js": "^18.6.1",
        "rimraf": "^5.0.5",
        "ts-loader": "^9.4.4",
        "typedoc": "^0.25.1",
        "typescript": "^5.2.2",
        "webpack": "^5.88.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.5",
        "@types/jsdom": "^21.1.3",
        "jest": "^29.7.0",
        "jsdom": "^22.1.0",
        "prettier": "3.0.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1"
    }
}
